<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:headerDividersEnabled">true</item>
    </style>

    <style name="background" parent="AppBaseTheme">
        <item name="android:background">#55ACEE</item>
    </style>

    <style name="background_menu" parent="AppBaseTheme">
        <item name="android:background">#212529</item>
    </style>
    
    <style name="background_datos" parent="AppBaseTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#2B9A91</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">-10px</item>
    </style>

    <style name="scrollView" parent="AppBaseTheme">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">#212529</item>
    </style>
    

    <style name="btnStyleArsenic" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:background">@drawable/search</item>        
    </style>

    <style name="btnStyleBreakerBay" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#e2e2e2</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/btn_breaker</item> 
       <item name="android:padding">10dp</item>
   </style>
     
    <style name="mybutton" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#e2e2e2</item>
       <item name="android:gravity">bottom|center</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:background">@drawable/boton</item> 
       <item name="android:padding">10dp</item>
    </style> 
    
    <style name="mybutton_info" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#e2e2e2</item>
       <item name="android:gravity">bottom|center</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item> 
       <item name="android:padding">10dp</item>
    </style> 

</resources>
