<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/background_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dip"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:paddingTop="0dip"
    android:screenOrientation="portrait"
    tools:context=".PoliticalMenuActivity" >

        
             <Button
		        android:id ="@+id/estatal"
		        style="@style/btnStyleBreakerBay"
		        android:layout_width="fill_parent"
		        android:layout_height="0dip"
		        android:layout_weight="0.25"
		        android:text="@string/state"
		        android:onClick="PDFViewer_State">
		        <!-- android:drawableTop="@drawable/ic_oaxaca" -->
		        
		        </Button>
             
             <Button
		        android:id ="@+id/region"
		        style="@style/btnStyleBreakerBay"
		        android:layout_width="fill_parent"
		        android:layout_weight=".25"
		        android:layout_height="0dip"
		        android:text="@string/region"
		        android:onClick="RegionActivity">
		        <!-- android:drawableTop="@drawable/ic_valles_centrales" -->
		        </Button>
        
             <Button
		        android:id ="@+id/political"
		        style="@style/btnStyleBreakerBay"
		        android:layout_width="fill_parent"
		        android:layout_weight=".25"
		        android:layout_height="0dip"
		        android:text="@string/political"
		        android:onClick="PoliticActivity"
		        ></Button>
			<Button
			    android:id ="@+id/locality"
			    style="@style/btnStyleBreakerBay"
			    android:layout_width="fill_parent"
			    android:layout_weight=".25"
		    	android:layout_height="0dip"
			    android:text="@string/locality"
			    android:onClick="MunicipiosActivity" >
			    <!-- android:drawableTop="@drawable/ic_action" -->
			    </Button>
        
</LinearLayout>
