<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >  
     <item android:state_pressed="true" >
          <shape android:shape="rectangle"  >
          <!-- <stroke android:width="1dip" android:color="#003a69" /> -->
          <solid android:color="#ada770" />
           
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="4dip" />
             <stroke android:width="1dip" android:color="#a9a46f" />
             <solid  android:color="#a9a46f"/>      
         </shape>
     </item> 
    
    <item>
    	<shape android:shape="rectangle"  >
        	<corners android:radius="4dip" />
            <gradient  android:angle="-90"  android:startColor="#a9a46f" android:endColor="#a9a46f"  />
        </shape>        
     </item>
</selector>